#include <iostream>
#include <Windows.h>
using namespace std;
class CObject {
private:
	int SetLeft;//Left Position Of Object
	int SetRight;//Right Position Of Object
	int SetUp;
	int SetDown;
public:
	virtual void GoUp()
	{
		SetUp++;
	}
	virtual void GoDown()
	{
		SetDown++;
	}
	virtual void GoRight()
	{
		SetRight++;
	}
	virtual void GoLeft()
	{
		SetLeft++;
	}
	bool isCollide(const CObject&tmp)
	{
		if (tmp.SetRight < SetLeft)
			return true;
		if (tmp.SetLeft > SetRight)
			return true;
		return false;
	}
};
